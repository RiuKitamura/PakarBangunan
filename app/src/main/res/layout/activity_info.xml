<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InfoActivity">
    <TextView
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level Kerusakan Bangunan"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"/>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">
        <Button
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/btn_info_ringan"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/dinding_bg"
            android:layout_weight="1"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:text="Rusak\nRingan"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"/>
        <Button
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/btn_info_sedang"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/kolom_bg"
            android:layout_weight="1"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:text="Rusak\nSedang"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"/>
        <Button
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/btn_info_berat"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/balok_bg"
            android:layout_weight="1"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:text="Rusak\nBerat"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar gejala kerusakan dari bangunan"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"/>
    <ListView
        android:id="@+id/lv_daftar_gejala"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:paddingBottom="80dp"
        android:clipToPadding="false"
        android:descendantFocusability="blocksDescendants">

    </ListView>

</LinearLayout>