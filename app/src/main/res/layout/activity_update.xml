<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Identitas Bangunan"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Bangunan"/>
                    <EditText
                        android:id="@+id/up_nama_bangunan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text"
                        android:padding="10dp"
                        android:maxLength="50"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/edit_text_bg"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/up_jml_lantai_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jumlah Lantai"/>
                        <EditText
                            android:id="@+id/up_jml_lantai"
                            android:layout_below="@id/up_jml_lantai_txt"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@id/up_thn_dibuat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:maxLength="3"
                            android:inputType="number"
                            android:padding="10dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="4dp"
                            android:background="@drawable/edit_text_bg"/>
                        <TextView
                            android:id="@+id/up_thn_dibuat_txt"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@id/up_jml_lantai"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dibuat Thun"/>
                        <EditText
                            android:id="@+id/up_thn_dibuat"
                            android:layout_below="@id/up_thn_dibuat_txt"
                            android:layout_alignParentRight="true"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:maxLength="4"
                            android:padding="10dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="4dp"
                            android:background="@drawable/edit_text_bg"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alamat"/>
                    <EditText
                        android:id="@+id/up_alamat_bangunan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text"
                        android:maxLength="100"
                        android:padding="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/edit_text_bg"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/up_latitude_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Latitude"/>
                        <EditText
                            android:id="@+id/up_latitude"
                            android:layout_below="@id/up_latitude_txt"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:layout_marginRight="10dp"
                            android:inputType="none"
                            android:editable="false"
                            android:padding="10dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="4dp"
                            android:background="@drawable/edit_text_bg"/>
                        <TextView
                            android:id="@+id/up_longitude_txt"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@id/up_latitude"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Longitude"/>
                        <EditText
                            android:id="@+id/up_longitude"
                            android:layout_below="@id/up_longitude_txt"
                            android:layout_toRightOf="@id/up_latitude"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="none"
                            android:editable="false"
                            android:padding="10dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="4dp"
                            android:background="@drawable/edit_text_bg"/>
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/up_add_photo_btn"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/add_photo"
                        android:background="@drawable/edit_text_bg"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kontak Person"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama"/>
                    <EditText
                        android:id="@+id/up_nama_person"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:maxLength="50"
                        android:inputType="text"
                        android:padding="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/edit_text_bg"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alamat"/>
                    <EditText
                        android:id="@+id/up_alamat_person"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:maxLength="100"
                        android:inputType="text"
                        android:padding="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/edit_text_bg"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nomor Telephon"/>
                    <EditText
                        android:id="@+id/up_nomor_person"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number"
                        android:maxLength="12"
                        android:padding="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/edit_text_bg"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/update_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Update"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:background="@drawable/button_bg"
                android:layout_margin="20dp"/>
        </LinearLayout>

    </ScrollView>


</RelativeLayout>